menu "EPD Configuration"

    config ESP_WIFI_SSID
        string "WiFi SSID"
        default ""
        help
            SSID (network name) for the example to connect to.

    config ESP_WIFI_PASSWORD
        string "WiFi Password"
        default ""
        help
            WiFi password (WPA or WPA2) for the example to use.

    config ESP_MAXIMUM_RETRY
        int "Maximum retry count"
        default 5
        help
            Set the Maximum retry to avoid station reconnecting to the AP unlimited when the AP is really inexistent.

    config SNTP_TIME_SERVER
        string "SNTP server name"
        default "pool.ntp.org"
        help
            Hostname of the main SNTP server.

    config STOCK_API_URL
        string "URL of the stock data API"
        default ""
        help
            API username for the stock market data.

    config STOCK_API_USER
        string "User name for basic auth"
        default ""
        help
            API username for the stock market data.

    config STOCK_API_PASS
        string "Password for basic auth"
        default ""
        help
            API password for the stock market data.

endmenu
